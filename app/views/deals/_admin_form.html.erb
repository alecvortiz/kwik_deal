<%= simple_form_for(@deal) do |f| %>
        <p><%= f.input :close_date, :close_date  => "Close Date", :label_html => { :class => 'text-right' } %></p>
        <p><%= f.input :city_planner, :placeholder => "City Planner", :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" } %></p>
        <p><%= f.input :payment_terms, :placeholder  => "Payment Terms", :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" } %></p>
        <p><%= f.input :months_to_expiration, :placeholder  => "Months to Expiration", :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" } %></p>
        <p><%= f.input :fine_print, :placeholder   => "Fine Print", :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" } %></p>
        <p><%= f.input :fulfill_method, :placeholder  => "Fulfillment Method", :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" } %></p>
        <p><%= f.input :freight_allowance, :placeholder  => "Freight Allowance", :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" } %></p>
        <p><%= f.input :max_delivery_days, :placeholder  => "Maximum Delivery Days", :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" } %></p>
        <p><%= f.input :courier, :placeholder  => "Courier", :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" } %></p>
        <p><%= f.input :stage, :collection => ["Complete"] %></p>


    <%= f.submit :class => "btn btn-success" %>
<% end %>