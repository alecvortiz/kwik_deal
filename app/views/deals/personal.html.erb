<div class="container">

    <% user = User.find params[:id] %>

    <h1> <%= user.email %>'s Deals </h1>  
                  
    <% user.deals.each do |deal| %>
    <p><%= link_to deal.name, deal_path(deal) %> | 
    <%= link_to 'Complete Deal', edit_deal_path(deal) %></p>
    <% end %>
    
    <%= link_to 'Back', :back, :class => "btn btn-default" %>

</div>