<div class="container">

    <% user = User.find params[:id] %>

    <h1> <%= user.email %>'s Deals </h1>  
  
    <p>
        <% if user == current_user %>  
        <a <%= link_to 'Add deal', new_deal_path(current_user) %> </a>
        <% end %>
    </p>
                  
    <% user.deals.each do |deal| %>
    <p><%= link_to deal.name, deal_path(deal) %></p>
    <% end %>
    
    <%= link_to 'Back', :back, :class => "btn btn-default" %>

</div>