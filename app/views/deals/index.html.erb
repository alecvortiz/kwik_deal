<div class="container">
 <h1> Deals </h1>
 
 <p><%= link_to 'Create Deal', new_deal_path(current_user), :class => "btn btn-default"  %></p>
 
 <% @deals.each do |deal| %>
 <p><%= link_to deal.name, deal_path(deal) %>:
  <tr>
           <td><%= link_to 'Clone Deal', clone_path(deal) %> | </td>
           <td><%= link_to 'Show Deal', deal_path(deal) %> | </td>    
           <td><%= link_to 'Edit Deal', edit_deal_path(deal) %> | </td>
           <td><%= link_to 'Delete Deal', [deal],
                               method: :delete,
                               data: { confirm: 'Are you sure you want to delete this deal?' } %></td>
      </tr>
 <% end %>
 </p>

<strong><%= link_to 'All Deals', show_all_path %></strong>

</div>