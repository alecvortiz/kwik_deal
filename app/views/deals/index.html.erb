<div class="container">
 
 <h1> My Deals </h1>
 
 <% if @deals.empty? %>
  <p>You have not created any deals yet.</p>
 <% end %>
 

 
  <% @deals.order(:created_at).reverse.each do |deal| %>
   <div class="foxyboxy">
    <p>
     
    </p>
   <%= link_to deal.name, deal_path(deal) %> 
   <% if deal.cloned %> (c) <% end %>:
   
   <% if !deal.products[0].nil? %>
  	 <%= image_tag deal.products[0].avatar.url(:thumb) %>
  	<% end %>
  	
  	<div class=".col-sm-4">	
     	 Description: <%= deal.description %>
      </div>
  	
  	<div class=".col-sm-2">	
       <tr>
            <td><%= link_to 'Clone Deal', clone_path(deal) %> </td>
            <% if deal.stage == "Denied" || deal.stage == "Prospecting" %>
             <td> | <%= link_to 'Edit Deal', edit_deal_path(deal) %> | </td>
             <td><%= link_to 'Delete Deal', [deal],
                                method: :delete,
                                data: { confirm: 'Are you sure you want to delete this deal?' } %> | </td>
             <td><%= link_to 'Add Product', new_deal_product_path(deal)%></td>
            <% end %>
       </tr>
   </div>
     	
    <p>
     
    </p>
</div>
<p>
 
</p>
    
  <% end %>
  

 


