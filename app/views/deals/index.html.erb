<div class="container">
 
 <h1> My Deals </h1>
 
 <% if @deals.empty? %>
  <p>You have not created any deals yet.</p>
 <% end %>
 
 <% @deals.each do |deal| %>
 <p><%= link_to deal.name, deal_path(deal) %> :
 <% if !deal.products[0].nil? %>
 	<%= image_tag deal.products[0].avatar.url(:thumb) %>
 <% end %>

  <tr>

           <td><%= link_to 'Clone Deal', clone_path(deal) %> | </td>
           <td><%= link_to 'Edit Deal', edit_deal_path(deal) %> | </td>
           <td><%= link_to 'Delete Deal', [deal],
                               method: :delete,
                               data: { confirm: 'Are you sure you want to delete this deal?' } %></td>
      </tr>
 <% end %>
 </p>

</div>


