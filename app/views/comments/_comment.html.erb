<p>
	<%= comment.body %>
</p>

<% if current_user.role == "admin" %>
<p>
    <%= link_to 'Edit', edit_deal_comment_path(@deal, comment), :class => "btn btn-success btn-xs" %>
    <%= link_to 'Delete', [comment.deal, comment],
			 method: :delete,
			 data: { confirm: 'Are you sure' }, :class => "btn btn-danger btn-xs" %>
</p>
<% end %>
