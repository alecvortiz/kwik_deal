<div class="container">

    <% user = User.find params[:id] %>
    <h1><%=user.account_name%> Info <%= link_to 'Edit User', edit_user_path(user), :class => 'btn btn-default' %> 
     <%= link_to 'Delete User', @user,
            method: :delete, :class => 'btn btn-danger',
	        data: {confirm: 'Are you sure you want to delete this user?'}  
	    %></h1>
        <p>Email: <%= user.email %> </p>
        <p>Merchant ID: <%= user.merchant_id %></p>
        <p>Account Name: <%= user.account_name %></p>
        <p>Role: <%= user.role %></p>
        <p>Id: <%= user.id %></p>
    
    
        <h1>Opportunities</h1>
                      
        <% user.deals.each do |deal| %>
        <p><%= link_to deal.name, deal_path(deal) %>  
        <%= link_to 'Complete/Edit Deal', edit_deal_path(deal), :class => "btn btn-primary btn-xs" %></p>
        <% end %>
    
    
    <%= link_to 'Back to All Users', users_path, :class => "btn btn-default" %>
    <br>
    <br>

</div>